<form action="{{ path('app_create_team') }}" method="POST">
    <div class="form-group mb-3">
        <label for="newTeamInputName">Team name</label>
        <input type="text" class="form-control" id="newTeamInputName" name="name" placeholder="Name">
    </div>
    <div class="form-group mb-3">
        <label for="newTeamInputCountry">Team Country</label>
        <select class="form-control" id="newTeamInputCountry" name="country">
            <option></option>
            {% for key, country in countries %}
                <option value="{{ country }}">{{ country }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group mb-3">
        <label for="newTeamInputMoney">Initial Team Money Balance</label>
        <input type="text" class="form-control" id="newTeamInputMoney" name="money" placeholder="e.g. $10,000">
    </div>
    <div class="form-group mb-3">
        <label for="newTeamInputPlayers">
            Players

        </label>
        <select multiple class="form-control" id="newTeamInputPlayers" name="players" style="height: 250px;">
            {% for key, player in playerNotAssociateWithAnyTeams %}
                 <option value="{{ player.id }}"> {{ player.price | format_currency('USD') }} | {{ player.user.name }} {{ player.surname }}</option>
            {% endfor %}
        </select>
        <small id="emailHelp" class="form-text text-muted">Players who are not associate with any teams | use CTRL for multi-selection |
            <a href="#" class="" onclick="alert('not implemented yet')">+ create new player</a></small>
    </div>
    <div class="form-group my-4">
        <button class="btn btn-sm btn-primary">
            <i class="fa fa-plus"></i>
            Create
        </button>
    </div>
</form>
