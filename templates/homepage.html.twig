{% extends 'base.html.twig' %}

{% block title %}Football Teams Trade | Homepage{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="card">
            <h4 class="text-center text-muted my-3">
                <i class="fa fa-futbol"></i>
                Football Teams Trade
            </h4>
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 ">
                        <nav>
                            <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                                <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab"
                                   href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">
                                    <i class="fa fa-flag-checkered"></i> Teams
                                </a>
                                <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab"
                                   href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">
                                    <i class="fa fa-people-arrows"></i> Deals
                                </a>
                                <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab"
                                   href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">
                                    <i class="fa fa-plus"></i> Add new team
                                </a>
                            </div>
                        </nav>
                        <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
                            <div class="tab-pane fade show active m-3" id="nav-home" role="tabpanel"
                                 aria-labelledby="nav-home-tab">
                                {% include "partials/teams_table.html.twig" %}
                            </div>
                            <div class="tab-pane fade m-3" id="nav-profile" role="tabpanel"
                                 aria-labelledby="nav-profile-tab">
                                {% include "partials/deals_table.html.twig" %}
                            </div>
                            <div class="tab-pane fade  m-3" id="nav-contact" role="tabpanel"
                                 aria-labelledby="nav-contact-tab">
                                {% if is_granted('ROLE_ADMIN') %}
                                    {% include "partials/add_new_team_table.html.twig" %}
                                {% else %}

                                    <div class="alert alert-danger">
                                        <i class="fa fa-info-circle"></i>
                                        {{ 'You are not authorized for this action.' | trans }}
                                    </div>

                                {% endif %}
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
